<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#A7F3F3">

    <!-- Header cyan -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="#00D9F0"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:paddingRight="16dp">

        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Thêm task"
            android:textStyle="bold"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#000" />

        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_sort_by_size"
            app:tint="#000"
            android:layout_alignParentEnd="true"/>
    </LinearLayout>

    <!-- spacing line -->
    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="#BEEFF3" />

    <!-- White rounded container -->
    <LinearLayout
        android:layout_margin="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_card_round"
        android:padding="12dp">

        <!-- Row header "Task" + "Nhóm" -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="6dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Task"
                android:textStyle="bold"
                android:textColor="#000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhóm"
                android:textStyle="bold"
                android:textColor="#000" />
        </LinearLayout>

        <!-- Name input + group button (tam giác trong circle) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- big rounded input -->
            <EditText
                android:id="@+id/edtTaskTitle"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Name"
                android:background="@drawable/edittext_round_blue"
                android:paddingLeft="16dp"
                android:paddingRight="12dp"
                android:textColor="#000"
                android:textSize="14sp"
                android:gravity="center_vertical"/>

            <!-- small circular dropdown button -->
            <ImageButton
                android:id="@+id/btnGroupDropdown"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/circle_white_shadow"
                android:src="@drawable/ic_triangle_down"
                app:tint="#00BCD4"
                android:scaleType="center" />
        </LinearLayout>

        <!-- Ngày bắt đầu label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày bắt đầu"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:textColor="#000" />

        <!-- Start date: input with clock icon inside on right -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="6dp">

            <EditText
                android:id="@+id/edtStartTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Date time"
                android:background="@drawable/edittext_round_blue"
                android:paddingLeft="16dp"
                android:paddingRight="52dp"
                android:focusable="false"
                android:clickable="true"
                android:textColor="#000"
                android:gravity="center_vertical"/>

            <ImageButton
                android:id="@+id/btnPickStartTime"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/circle_white_shadow"
                android:src="@android:drawable/ic_menu_recent_history"
                app:tint="#00BCD4"/>
        </RelativeLayout>

        <!-- Ngày kết thúc label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày kết thúc"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:textColor="#000" />

        <!-- End date input with clock icon -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginTop="6dp">

            <EditText
                android:id="@+id/edtEndTime"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Date time"
                android:background="@drawable/edittext_round_blue"
                android:paddingLeft="16dp"
                android:paddingRight="52dp"
                android:focusable="false"
                android:clickable="true"
                android:textColor="#000"
                android:gravity="center_vertical"/>

            <ImageButton
                android:id="@+id/btnPickEndTime"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/circle_white_shadow"
                android:src="@android:drawable/ic_menu_recent_history"
                app:tint="#00BCD4"/>
        </RelativeLayout>

        <!-- Mô tả label -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mô tả"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:textColor="#000" />

        <!-- Description big rounded -->
        <EditText
            android:id="@+id/edtDescription"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/edittext_round_blue"
            android:gravity="top"
            android:padding="12dp"
            android:textColor="#000"
            android:hint="Description"/>

    </LinearLayout>

    <!-- Save button (white inside, cyan border, centered, rounded) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="18dp">

        <Button
            android:id="@+id/btnSaveTask"
            android:layout_width="120dp"
            android:layout_height="44dp"
            android:text="Save"
            android:textColor="#000"
            android:background="@drawable/btn_save_white_outline"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>

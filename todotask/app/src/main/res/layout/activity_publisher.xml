<!-- res/layout/activity_publisher.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#A9F9F9"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Thanh tiêu đề -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00E5FF"
        android:padding="16dp">

        <!-- Tiêu đề giữa màn hình -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhà phát triển"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/black"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true" />

        <!-- Icon menu góc phải -->
        <ImageView
            android:id="@+id/ivMenu"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_sort_by_size"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <!-- Thẻ 1: Tiền Phước Sang -->
    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="12dp"
        android:padding="8dp"
        android:background="@drawable/card_background"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <View
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="#00E5FF"
            android:layout_marginEnd="8dp" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tiền Phước Sang"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MSSV-2224802010564"
                android:textSize="14sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/circle_blue" />
    </LinearLayout>

    <!-- Thẻ 2: Phạm Phú Kiệt -->
    <LinearLayout
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="12dp"
        android:padding="8dp"
        android:background="@drawable/card_background"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <View
            android:layout_width="6dp"
            android:layout_height="match_parent"
            android:background="#FFEB3B"
            android:layout_marginEnd="8dp" />

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phạm Phú Kiệt"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MSSV-2224802010569"
                android:textSize="14sp"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <View
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:background="@drawable/circle_yellow" />
    </LinearLayout>

</LinearLayout>
